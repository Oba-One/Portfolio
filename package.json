    "lodash": "^4.17.21",
    "method-override": "^3.0.0",
    "morgan": "^1.10.0",
    "normalize-wheel": "^1.0.1",
    "pug": "^3.0.2",
    "three": "^0.147.0"
  },
  "devDependencies": {
    "@babel/core": "^7.20.5",
    "@squoosh/lib": "^0.4.0",
    "autoprefixer": "10.4.13",
    "babel-loader": "^9.1.0",
    "clean-webpack-plugin": "^4.0.0",
    "concurrently": "^7.6.0",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.7.2",
    "eslint": "^8.29.0",
    "eslint-config-prettier": "^8.5.0",
