    "ogl": "^0.0.103",
    "postcss": "^8.4.20",
    "postcss-loader": "^7.0.2",
    "prettier": "2.8.1",
    "pug-loader": "^2.4.0",
    "raw-loader": "^4.0.2",
    "sass": "^1.57.1",
    "sass-loader": "^13.2.0",
    "terser-webpack-plugin": "^5.3.6",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1",
    "webpack-dev-server": "^4.11.1",
    "webpack-merge": "^5.8.0"
