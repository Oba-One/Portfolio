{
  "name": "static-boilerplate",
  "version": "1.0.0",
  "author": "Oba-One",
  "license": "ISC",
  "description": "",
  "keywords": [
    "boilerplate",
    "static",
    "html",
    "website",
    "javascript"
  ],
  "scripts": {
    "backend:dev": "nodemon --watch server/index.js",
    "backend:build": "node server/index.js",
    "client:dev": "webpack serve --config webpack/webpack.config.dev.js",
    "client:build": "webpack -p --progress --config webpack/webpack.config.prod.js",
    "start": "concurrently --kill-others \"npm run client:dev\" \"npm run backend:dev\""
  },
  "dependencies": {
    "auto-bind": "^5.0.1",
    "body-parser": "^1.20.1",
    "dotenv": "^16.0.3",
